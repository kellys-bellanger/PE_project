@page
@using System.IO
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment _env
@using UAMarketSimple
@functions {
    // Variables para el formulario
    [BindProperty] public string Nombre { get; set; } = "";
    [BindProperty] public int Precio { get; set; }
    [BindProperty] public string Descripcion { get; set; } = "";
    [BindProperty] public IFormFile ImagenSubida { get; set; } = default!;
    
    public string MensajeError { get; set; } = "";
    public string MensajeExito { get; set; } = "";

    public IActionResult OnGet()
    {
        // SEGURIDAD: Si no está logueado, lo mandamos al Login
        if (Datos.UsuarioLogueado == null)
        {
            return RedirectToPage("/Login");
        }
        return Page();
    }

    public IActionResult OnPost()
    {
        try
        {
            // VALIDACIONES
            if (string.IsNullOrWhiteSpace(Nombre) || Nombre.Length < 3)
            {
                MensajeError = "El nombre del producto debe tener al menos 3 caracteres";
                return Page();
            }
            
            if (Precio <= 0)
            {
                MensajeError = "El precio debe ser mayor a 0";
                return Page();
            }
            
            if (string.IsNullOrWhiteSpace(Descripcion) || Descripcion.Length < 10)
            {
                MensajeError = "La descripción debe tener al menos 10 caracteres";
                return Page();
            }
            
            if (ImagenSubida == null || ImagenSubida.Length == 0)
            {
                MensajeError = "Debes subir una imagen del producto";
                return Page();
            }

            // 1. Crear el nuevo producto
            Producto nuevo = new Producto();
            nuevo.Nombre = Nombre.Trim();
            nuevo.Precio = Precio;
            nuevo.Descripcion = Descripcion.Trim();
            
            // --- LÓGICA FOTO REAL (CORREGIDA) ---
            if (ImagenSubida != null)
            {
                // 1. Usamos System.IO.Path para evitar errores rojos
                string nombreArchivo = "foto_" + DateTime.Now.Ticks + System.IO.Path.GetExtension(ImagenSubida.FileName);

                // 2. Ruta de guardado
                string rutaDestino = System.IO.Path.Combine(_env.WebRootPath, "imagenes", nombreArchivo);

                // 3. Guardar archivo físico
                using (var stream = new FileStream(rutaDestino, FileMode.Create))
                {
                    ImagenSubida.CopyTo(stream);
                }

                // 4. Guardar nombre en el objeto
                nuevo.FotoUrl = nombreArchivo;
            }
            else
            {
                nuevo.FotoUrl = "default.png";
            }
            
            // DATOS AUTOMÁTICOS (CON VALIDACIÓN):
// Verificamos nuevamente que el usuario esté logueado
if (Datos.UsuarioLogueado != null)
{
    nuevo.CifVendedor = Datos.UsuarioLogueado.CIF;
    nuevo.Telefono = !string.IsNullOrEmpty(Datos.UsuarioLogueado.Telefono) 
                     ? Datos.UsuarioLogueado.Telefono 
                     : "88888888";
}
else
{
    // Esto no debería pasar, pero por seguridad:
    MensajeError = "Sesión expirada. Por favor, inicia sesión nuevamente.";
    return Page();
}

            // 2. Guardar en la lista global
            Datos.ListaProductos.Add(nuevo);
            
            MensajeExito = "¡Producto publicado con éxito! Redirigiendo a tus publicaciones...";

            // 3. Redirigir después de 2 segundos
            Response.Headers.Add("Refresh", "2;url=/MisProductos");
            return Page();
        }
        catch (Exception ex)
        {
            MensajeError = "Error al publicar el producto: " + ex.Message;
            return Page();
        }
    }
}

<!-- ========== DISEÑO MEJORADO DEL FORMULARIO ========== -->
<div class="publicar-container">
    <div class="publicar-card">
        <!-- ENCABEZADO ELEGANTE -->
        <div class="publicar-header">
            <h1>Publicar Nuevo Producto</h1>
            <p class="publicar-subtitle">
                Vendedor: <span class="vendedor-nombre">@Datos.UsuarioLogueado?.Nombre</span>
            </p>
        </div>

        <!-- MENSAJES DE ÉXITO/ERROR -->
        @if (!string.IsNullOrEmpty(MensajeError))
        {
            <div class="alert-error">
                ⚠️ @MensajeError
            </div>
        }
        
        @if (!string.IsNullOrEmpty(MensajeExito))
        {
            <div class="alert-success">
                ✅ @MensajeExito
            </div>
        }

        <!-- FORMULARIO ELEGANTE -->
        <form method="post" enctype="multipart/form-data" class="publicar-form">
            <!-- NOMBRE DEL PRODUCTO -->
            <div class="form-group">
                <label for="Nombre">
                    Nombre del Producto
                </label>
                <input type="text" 
                       asp-for="Nombre"  
                       class="form-control-elegant"
                       required
                       minlength="3"
                       value="@Nombre" />
            </div>

            <!-- PRECIO -->
            <div class="form-group">
                <label for="Precio">
                    Precio en Córdobas (C$)
                </label>
                <input type="number" 
                       asp-for="Precio"  
                       class="form-control-elegant"
                       required
                       min="1"
                       value="@Precio" />
            </div>

            <!-- DESCRIPCIÓN -->
            <div class="form-group">
                <label for="Descripcion">
                    Descripción Detallada
                </label>
                <textarea asp-for="Descripcion" 
                          rows="4"
                          placeholder="Describe tu producto: marca, modelo, estado, características especiales..."
                          class="form-control-elegant"
                          required
                          minlength="10">@Descripcion</textarea>
            </div>

            <!-- IMAGEN -->
            <div class="form-group">
                <label for="ImagenSubida">
                    Imagen del Producto
                </label>
                <div class="file-upload-container">
                    <input type="file" 
                           asp-for="ImagenSubida" 
                           class="file-input"
                           accept="image/*"
                           required />
                    <div class="file-upload-info">
                        <p>Sube una foto clara de tu producto</p>
                        <small>Formatos aceptados: JPG, PNG, JPEG</small>
                    </div>
                </div>
            </div>

            <!-- BOTONES -->
            <div class="form-actions">
                <button type="submit" class="btn-publicar">
                    Publicar Producto
                </button>
                <a href="/MisProductos" class="btn-cancelar">
                    Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

